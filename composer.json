{
    "name": "sikhlana/laravel-singleton",
    "type": "library",
    "description": "A simple package to automatically mark a class as singleton.",
    "keywords": ["laravel", "package", "singleton", "dependency injection", "ioc"],
    "license": "MIT",
    "authors": [
        {
            "name": "Saif Mahmud",
            "email": "xoxo@saifmahmud.name",
            "homepage": "https://saifmahmud.name/"
        }
    ],
    "require": {
        "php": "^8.0|^7.4",
        "laravel/framework": ">=8.0"
    },
    "require-dev": {
        "orchestra/testbench": ">=6.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Sikhlana\\Singleton\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sikhlana\\Singleton\\Test\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sikhlana\\Singleton\\SingletonServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
